<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), root_path %></li>
        <li><%= link_to t("header.products"), products_path %></li>
        <% if logged_in? %>
          <li>
            <%= link_to carts_path, class: "header-cart" do %>
              <%= t "header.cart" %></i><%= content_tag :span,
                current_cart.size, class: "badge" %>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.user_name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"),
                user_path(current_user) %></li>
              <li><%= link_to t("header.settings"),
                edit_user_path(current_user) %></li>
              <li><%= link_to t("header.suggest_product"),
                new_user_suggested_product_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("header.logout"), logout_path,
                method: :delete %></li>
            </ul>
          </li>
          <% if current_user.is_admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "header.dashboard" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.user_management"),
                admin_users_path %></li>
              <li><%= link_to t("header.product_management"),
                admin_products_path %></li>
              <li><%= link_to t("header.order_management"),
                admin_orders_path %></li>
              <li><%= link_to t("header.suggest_management"),
                admin_suggested_products_path %></li>
              <li><%= link_to t("header.categories"),
                admin_categories_path %></li>
              <li><%= link_to t("header.statistic"),
                admin_statistics_path %></li>
            </ul>
          </li>
          <% end %>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
