<div class="card col-sm-6 col-md-3">
  <%= link_to image_tag(product.image.url, alt: t("alt.product_image"),
    class: "full-width-image"), product %>
    <h4><b><%= product.name %></b></h4>
    <div class="product-rate"
      data-score="<%= product.average_rate %>">
    </div>
    <span>( <%= pluralize product.rate_count, "reviews" %> )</span>
    <p class="product-price"><%= t "show_product.price" %> <%= number_to_currency product.price %></p>
    <%= link_to t("show_product.buy_now"), "#", class: "btn full-width-button" %>
</div>
