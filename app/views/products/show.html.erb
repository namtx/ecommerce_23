<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @product.image.url, class: "img-responsive",
        alt: t("alt.product_image") %>
    </div>
    <div class="col-md-6">
      <h2><%= @product.name %></h2>
      <div class="row user-rate-product" product-id="<%= @product.id %>"
        data-score="<%= @product.average_rate %>">
      </div>
      <i><%= pluralize(@product.rate_count, "review") %></i>
      <p class="description"><%= @product.description %></p>
      <h3 class="price"><%= @product.price %></h3>
      <%= link_to t("show_product.add_to_cart"), "#",
        class: "btn btn-primary" %>
    </div>
  </div>
</div>
