<%= provide :title, @user.user_name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.image.url, alt: t("alt.profile_image"),
          size: Settings.image.profile_upload_size %>
        <%= @user.user_name %>
      </h1>
      <p  class="text-center text-info"><%= @user.email %></p>
      <a href="#" class="btn btn-success full-width-button">
        <%= t "show.edit_profile" %>
      </a>
    </section>
  </aside>
  <div class="col-md-8">
    <h2><%= t "recently.title" %></h2>
    <table class="table recenty-viewed">
      <thead>
        <tr>
          <th><%= t "recently.product" %></th>
          <th><%= t "recently.description" %></th>
          <th><%= t "recently.price" %></th>
          <th><%= t "recently.rating" %></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <%= render partial: "recently_viewed", locals: {product: product} %>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @products %>
  </div>
</div>
